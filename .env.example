# Database Configuration
MONGO_URI=mongodb://localhost:27017/appointment-booking
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/appointment-booking

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourapp.com
ADMIN_EMAIL=admin@yourapp.com

# Application Configuration
APP_NAME=Appointment Booking System
APP_URL=http://localhost:5000

# Security Configuration
BCRYPT_ROUNDS=10

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Frontend Configuration (for CORS)
FRONTEND_URL=http://localhost:3000

# Push Notifications (for future use)
PUSH_NOTIFICATION_KEY=your-push-notification-key
PUSH_NOTIFICATION_SENDER_ID=your-sender-id

# File Upload Configuration (for future use)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads/

# Analytics Configuration (for future use)
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Social Media Configuration (for future use)
FACEBOOK_APP_ID=your-facebook-app-id
GOOGLE_CLIENT_ID=your-google-client-id